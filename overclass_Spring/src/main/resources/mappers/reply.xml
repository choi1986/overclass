<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="reply">
	<select id="read" resultType="reply">
		select rno, dno, replyer, content, writedate from oc_reply
		where dno=#{dno}
		order by writedate desc
	</select>
	<insert id="create">
		insert into oc_reply
		values(oc_reply_seq.nextval, #{user_id}, #{dno}, #{content})
	</insert>
	<delete id="delete">
		delete from oc_reply
		where rno=#{rno}
	</delete>
	
	<select id="count" resultType="int">
		select count(dno) from oc_reply
		where dno=#{dno}
	</select>
</mapper>
