<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="reply">
	<select id="read" resultType="reply">
		select rno, replyer, dno, content from oc_reply
		where dno=#{dno}
	</select>
	<insert id="create">
		insert into oc_reply
		values(oc_reply_seq.nextval, #{user_id}, #{dno}, #{content})
	</insert>
	<delete id="delete">
		delete from oc_reply
		where dno=#{dno} and replyer=#{user_id}
	</delete>
</mapper>
