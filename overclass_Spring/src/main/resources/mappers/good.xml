<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="good">
	<select id="search" resultType="good">
		select dno
		from oc_good
		where good_user = #{good_user} and
		dno IN
		 <foreach collection="dnonum" item="item" open="(" separator="," close=")">
                    #{item}
         </foreach>
	</select>
	
	<insert id="insert">
		insert into oc_good
		values(#{good_user}, #{dno})
	</insert>
	
	<delete id="delete">
		delete from oc_good
		where good_user = #{good_user} and dno = #{dno}
	</delete>
	
	<select id="count" resultType="int">
		select dno, count(good_user)
		from oc_good
		where dno IN
		 <foreach collection="dnonum" item="item" open="(" separator="," close=")">
                    #{item}
         </foreach>
         group by dno
	</select>
</mapper>
